<?xml version="1.0"?>
<run>
    <tool>
        <title>Integrating and Root-finding Calculator</title>
        <about>Press Simulate to view results.</about>
        <command>python @tool/project.py @driver</command>
    </tool>
    <input>
        <string id="formula">
            <about>
                <label>M(t)</label>
                <hints>Example: 2*t + 1</hints>
            </about>
            <size>30x5</size>
	    <default>2*t+1</default>
        </string>
        <number id="min">
            <about>
		<label>Min. t</label>
		<description>This is the minimum t.</description>
	    </about>
            <default>0</default>
        </number>
        <number id="max">
	    <about>
	  	<label>Max. t</label>
		<description>This is the maximum t</description>
	    </about>
            <default>10</default>
        </number>
        <number id="a">
            <about>
	        <label>a</label>
		<description>The addend to the root equation</description>
	    </about>
            <default>10</default>
        </number>
	<number id="Y0">
	   <about>
	      <label>Y0</label>
	      <description>The value of M at the minimum t</description>
           </about>
            <default>0.1</default>
        </number>
	<number id="Npts">
	   <about>
	      <label>Number of points</label>
              <description>This is the number of point at which to do the integral</description>	       
	   </about>
            <default>100</default>
            <min>10</min>
	</number>    
    </input>
</run>
