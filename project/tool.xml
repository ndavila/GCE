<?xml version="1.0"?>
<run>
    <tool>
        <title>Gas Mass and Star Formation Rate Calculator</title>
        <about>Press Simulate to view results.</about>
        <command>python @tool/gas_mass.py @driver</command>
    </tool>
    <input>
        <string id="formula">
            <about>
                <label>MG(x)</label>
                <hints>Example:</hints>
            </about>
            <size>30x5</size>
	    <default>2*x+1</default>
        </string>
        <number id="min">
            <about>
		<label>From x</label>
		<description>This is the starting point.</description>
	    </about>
            <default>-1</default>
        </number>
        <number id="max">
	    <about>
	  	<label>To x</label>
		<description>This is the ending point</description>
	    </about>
            <default>1</default>
        </number>
        <number id="Y0">
            <about>
	        <label>Y0</label>
		<description>The value of Y at the minimum X</description>
	    </about>
            <default>0</default>
        </number>
        <number id="Npts">
            <about>
	        <label>Number of points</label>
		<description>This is the number of points at which to do the integral</description>
	    </about>
            <default>100</default>
	    <min>10</min>
        </number>
    </input>
</run>
